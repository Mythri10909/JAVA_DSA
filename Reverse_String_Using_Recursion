import java.util.HashMap;
class Reverse_String_Using_Recursion {
    public static void main(String args[]){
        String s="irhtyM";
        String res=reverse(s,s.length()-1,"");
        System.out.println(res);
    }
     public static String reverse(String s,int i,String res){
         if(i<0){
             return res;
         }
         return reverse(s,i-1,res+(s.charAt(i)));
         
         
     }
}
